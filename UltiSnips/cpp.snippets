#-- a comment line
snippet --
//--------------------------------------------------------------------------
endsnippet

#class 
snippet class "class .. (class)"
class ${1:`!p snip.rv = snip.basename or "name"`}
{
	private:
		${0:/* data */}

	public:
		${1/(\w+).*/$1/} (${2:arguments});
		virtual ~${1/(\w+).*/$1/} ();
};
endsnippet

snippet once
//--------------------------------------------------------------------------
#ifndef ${1}_H
#define $1_H
//--------------------------------------------------------------------------

//--------------------------------------------------------------------------
#endif
//--------------------------------------------------------------------------
//EOF
endsnippet

#if block
snippet if 
if(${1})
{

}
endsnippet

#else if block
snippet elseif
else if
{
	${1}
}
endsnippet

#else block
snippet else 
else
{
	${1}
}
endsnippet

#for
snippet for
for(int i=0;i<${1};i++)
{

}
endsnippet


#cout 
snippet cout 
std::cout << ${1} << std::endl;
endsnippet

#include snippets
snippet Inc
#include <${1}>
endsnippet

snippet inc
#include "${1}.h"
endsnippet

#a main function
snippet main
int main(int argc, char** argv)
{
	${1}
	return 0;
}
endsnippet





